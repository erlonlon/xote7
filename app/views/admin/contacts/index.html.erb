<!-- Main -->
<div id="main">
<div class="cl">&nbsp;</div>

<!-- Content -->
<div id="content">

<!-- Box -->
<div class="box">
<!-- Box Head -->
<div class="box-head">
<h2 class="left">Listagem de contatos do site</h2>

</div>
<!-- End Box Head --> 

<!-- Table -->
<div class="table">
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
        <th width="15%">Data</th>
    <th width="20%">Contato</th>
     <th width="20%">E-mail</th>
      <th width="30%">Assunto</th>
    <th width="15%" class="ac">Opções de controle</th>
    </tr>
       <% if @contacts.present? %>
        <% @contacts.each do |contact| %>
        <tr>
              <td><h3><%= contact.created_at.strftime("%d %b %Y") %></h3></td> 
        <td><h3><%= contact.nome %></h3></td>   
         <td><h3><%= contact.email %></h3></td> 
           <td><h3><%= contact.assunto %></h3></td>             

        <td>      
       
        <%= link_to admin_contact_path(contact) do %>
        Show
        <% end %>
        </td>
        </tr>

        <% end %>
        <% end %>

    </table>

    <!-- Pagging -->
<div class="pagging">
    <div class="left">Showing 1-12 of 44</div>
    <div class="right">
       

       <%= will_paginate @galeries %>

    </div>
</div>
<!-- End Pagging -->
</div>
<!-- Table -->
</div>
<!-- End Box -->



</div>
<!-- End Content -->

<!-- Sidebar -->
<div id="sidebar">


</div>
<!-- End Sidebar -->

<div class="cl">&nbsp;</div>      
</div>
<!-- Main -->


