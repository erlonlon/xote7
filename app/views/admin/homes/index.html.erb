<!-- Main -->
<div id="main">
<div class="cl">&nbsp;</div>

<!-- Content -->
<div id="content">

<!-- Box -->
<div class="box">
<!-- Box Head -->
<div class="box-head">
<h2 class="left">Listagem de notícias e eventos</h2>
<div class="right">
<label>search articles</label>
<input type="text" class="field small-field" />
<input type="submit" class="button" value="search" />
</div>
</div>
<!-- End Box Head -->	

<!-- Table -->
<div class="table">
<table width="100%" border="0" cellspacing="0" cellpadding="0">
<tr>

<th width="30%">Data</th>
<th width="50%">Assunto</th>


<th width="20%" class="ac">Opções de Controle</th>
</tr>

<% @contacts.each do |post| %>
<tr>
<td><%= post.created_at.strftime("%d %B %Y") %></td>
<td><h3><%= post.assunto %></h3></td>


<td><%= link_to admin_contact_path(post) do %>
Show
<% end %></td>
</tr>
<% end %>
</table>


<!-- Pagging -->
<div class="pagging">
<div class="left">Showing 1-12 of 44</div>
<div class="right">
<%= will_paginate @posts %>
</div>
</div>
<!-- End Pagging -->

</div>
<!-- Table -->

</div>
<!-- End Box -->



</div>
<!-- End Content -->

<!-- Sidebar -->
<div id="sidebar">

<%= render :partial => 'sidebar' %>

</div>
<!-- End Sidebar -->

<div class="cl">&nbsp;</div>			
</div>
<!-- Main -->

