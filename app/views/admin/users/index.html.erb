<!-- Main -->
<div id="main">
<div class="cl">&nbsp;</div>

<!-- Content -->
<div id="content">

<!-- Box -->
<div class="box">
<!-- Box Head -->
<div class="box-head">
<h2 class="left">Cadastro de usuários</h2>

</div>
<!-- End Box Head --> 

<!-- Table -->
<div class="table">
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
    <th width="40%">Nome usuário</th>
    <th width="40%">E-mail</th>

    <th width="20%" class="ac">Opções de controler</th>
    </tr>
       <% if @users.present? %>
        <% @users.each do |user| %>
        <tr>
        <td><h3><%= user.username %></h3></td> 
        <td><h3><%= user.email %></h3></td>             

        <td>
        <%= link_to  admin_user_path(user), confirm: 'Deletar arquivo, Tem certeza ?', method: :delete , :title => "Excluir arquivo" do %>
        Excluir
        <% end %>&nbsp;
        <%= link_to 'Edit', edit_admin_user_path(user) %>&nbsp;
        <%= link_to admin_user_path(user) do %>
        Show
        <% end %>
        </td>
        </tr>

        <% end %>
        <% end %>

    </table>

    <!-- Pagging -->
<div class="pagging">
    <div class="left">Showing 1-12 of 44</div>
    <div class="right">
       

       <%= will_paginate @users %>

    </div>
</div>
<!-- End Pagging -->
</div>
<!-- Table -->
</div>
<!-- End Box -->



</div>
<!-- End Content -->

<!-- Sidebar -->
<div id="sidebar">
<%= render :partial => 'menulateral' %>

</div>
<!-- End Sidebar -->

<div class="cl">&nbsp;</div>      
</div>
<!-- Main -->

