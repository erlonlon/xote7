<!-- Main -->
<div id="main">
<div class="cl">&nbsp;</div>

<!-- Content -->
<div id="content">

<!-- Box -->
<div class="box">
<!-- Box Head -->
<div class="box-head">
<h2 class="left">Cadastro de categorias</h2>

</div>
<!-- End Box Head --> 

<!-- Table -->
<div class="table">
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
         <th width="20%">Nome categoria</th>
    <th width="60%">Nome categoria</th>
    <th width="20%" class="ac">Opções de alterar registro</th>
    </tr>
       <% if @categories.present? %>
        <% @categories.each do |category| %>
        <tr>
             <td><h3><%= category.id %></h3></td>   
        <td><h3><%= category.nome %></h3></td>             

        <td>
        <%= link_to  admin_category_path(category), confirm: 'Deletar arquivo, Tem certeza ?', method: :delete , :title => "Excluir arquivo" do %>
        Excluir
        <% end %>&nbsp;
        <%= link_to 'Edit', edit_admin_category_path(category) %>&nbsp;
        <%= link_to admin_category_path(category) do %>
        Show
        <% end %>
        </td>
        </tr>

        <% end %>
        <% end %>

    </table>

    <!-- Pagging -->
<div class="pagging">
    <div class="left">Showing 1-12 of 44</div>
    <div class="right">
       

       <%= will_paginate @galeries %>

    </div>
</div>
<!-- End Pagging -->
</div>
<!-- Table -->
</div>
<!-- End Box -->



</div>
<!-- End Content -->

<!-- Sidebar -->
<div id="sidebar">
<%= render :partial => 'menulateral' %>

</div>
<!-- End Sidebar -->

<div class="cl">&nbsp;</div>      
</div>
<!-- Main -->

